<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smtours">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SMTours">
        <activity
            android:name=".ResetPassword"
            android:exported="true" />
        <activity
            android:name=".TouristProfile"
            android:exported="true" />
        <activity
            android:name=".PlaceAdd"
            android:exported="true" />
        <activity
            android:name=".MyTours"
            android:exported="true" />
        <activity android:name=".Payment" />
        <activity android:name=".TourSummary" />
        <activity android:name=".TourDescription" />
        <activity android:name=".TourType" />
        <activity android:name=".SignUp" />
        <activity android:name=".LogIn" />
        <activity android:name=".MainActivity" />
        <activity android:name=".StartScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>