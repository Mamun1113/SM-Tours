<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="@color/background3"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/placeImageViewID"
                android:layout_width="match_parent"
                android:layout_height="194dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/bg_bangladesh" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/placeNameViewID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sample name"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/placeShortDescriptionViewID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sample description"

                    android:textAppearance="?attr/textAppearanceHeadline6" />

                <TextView
                    android:id="@+id/nextTourViewID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sample tour date"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/totalVisitedViewID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/button1"
                    android:layout_gravity="center"
                    android:text="Sample total visited"
                    android:textAppearance="?attr/textAppearanceHeadline6" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>